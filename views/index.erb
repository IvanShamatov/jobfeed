<html>
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script>
      var getVacancies = function(str) {
        $("ul").remove();
        $('input').val = "";
        $.getJSON("/jobs/"+str, function( data ) {
          var items = [];
          $.each( data, function(ind, vac ) {
            items.push("<li><a href='"+vac.url+"'>"+vac.title+"</a></br>"+vac.published+" "+vac.author+"</li>" );
          });
         
          $("<ol/>", {
            "class": "my-new-list",
            html: items.join("")
          }).appendTo("body");
        });
      }

      $(document).ready(function(){
        $("input").keypress(function(e) {
          if (e.which == 13) {
            e.preventDefault();
            getVacancies(this.value);
          }
        })
      });
    </script>
    <style>
      body {
        font-size: 15px;
        font-family: 'Trebuchet MS';
      }
      li {
        height: 50px;
      }
    </style>
  </head>
  <body>
    <input type="text" id="search-field"></input>
  </body>
</html>